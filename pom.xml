<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>eu.unifiedviews</groupId>
		<artifactId>uv-pom</artifactId>
		<version>2.0.2-SNAPSHOT</version>
	</parent>

	<groupId>eu.unifiedviews</groupId>
	<artifactId>uv-core</artifactId>
	<version>2.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>UnifiedViews-Core</name>
	<description />

	<properties>
		<project.java.source.version>1.7</project.java.source.version>
		<project.java.target.version>1.7</project.java.target.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!-- TODO: update ussage as rdf/files-impls utilize project version, not this property -->
		<uv-dpu-api.version>${unifiedviews.api.version}</uv-dpu-api.version>
		<uv-dpu-api-helpers.version>2.0.2-SNAPSHOT</uv-dpu-api-helpers.version>		
		<uv-dataunit-rdf.version>${unifiedviews.api.version}</uv-dataunit-rdf.version>
		<uv-dataunit-files.version>${unifiedviews.api.version}</uv-dataunit-files.version>
		<uv-dataunit-relational.version>${unifiedviews.api.version}</uv-dataunit-relational.version>
		<uv-dataunit-helpers.version>2.0.2-SNAPSHOT</uv-dataunit-helpers.version>		

		<dataunit.version>${project.version}</dataunit.version>

		<!-- define used vaadin version !!! do not forget to update the version
		for OSGI's package export -->
		<vaadin.version>7.3.7</vaadin.version>
		<!-- the minimal required vaadin version The lowest Vaadin version accepted
		by DPUs. -->
		<vaadin.version.min>7.3.7</vaadin.version.min>
		<!-- max vaadin version accepted be DPUs The highest Vaadin version accepted
		by DPUs. -->
		<vaadin.version.max>8.0.0</vaadin.version.max>

		<!-- define output dirs -->
		<project.output.lib>target/lib/</project.output.lib>
		<project.output.lib.backend>target/lib/backend/</project.output.lib.backend>
		<project.output.dpu>target/dpu/</project.output.dpu>
		<skipTests>false</skipTests>
		<!-- spring version -->
		<org.springframework.version>3.1.4.RELEASE</org.springframework.version>
		<org.springframework.security.version>3.1.4.RELEASE</org.springframework.security.version>
		<!-- other third party libraries versions -->
		<slf4j.version>1.7.7</slf4j.version>
		<logback.version>1.0.13</logback.version>
		<sesame.version>2.7.13</sesame.version>
	</properties>

	<modules>
		<!-- dataunits -->
		<module>dataunit</module>
		<module>dataunit-file</module>
		<module>dataunit-file-impl</module>
		<module>dataunit-rdf</module>
		<module>dataunit-rdf-impl</module>
		<module>dataunit-relational-impl</module>
		<!-- odcs libraries -->
		<module>commons-app</module>
		<!-- application -->
		<module>frontend</module>
		<module>backend</module>
		<!-- application additional libraries -->
		<module>lib</module>
		<!-- test environment for modules -->
		<module>module-test</module>
		<!-- build modules/plugins/dpus -->
		<module>master</module>
	</modules>

	<scm>
		<url />
		<connection />
		<developerConnection />
	</scm>

	<developers>
		<!-- <developer> <id></id> <name></name> <email></email> <roles> <role>developer</role>
		</roles> </developer> -->
	</developers>

	<contributors>
		<contributor>
			<name>Tomas Knap</name>
			<email>knap@ksi.mff.cuni.cz</email>
			<roles>
				<role>project supervisor</role>
			</roles>
			<url>http://www.ksi.mff.cuni.cz/~knap</url>
			<organization>Faculty of Mathematics and Physics, Charles University in Prague</organization>
		</contributor>
	</contributors>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>eu.unifiedviews</groupId>
				<artifactId>uv-dataunit-helpers</artifactId>
				<version>${uv-dpu-api-helpers.version}</version>
			</dependency>
			<dependency>
				<groupId>eu.unifiedviews</groupId>
				<artifactId>uv-dpu-helpers</artifactId>
				<version>${uv-dpu-api-helpers.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<repositories>
		<repository>
			<id>maven.eea.sk</id>
			<name>maven.eea.sk-public</name>
			<url>http://maven.eea.sk/artifactory/public/</url>
		</repository>

		<repository> <!-- spring repositories -->
			<id>com.springsource.repository.bundles.release</id>
			<name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>

		<repository>
			<id>com.springsource.repository.bundles.external</id>
			<name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
			<url>http://repository.springsource.com/maven/bundles/external</url>
		</repository>
	</repositories>

	<pluginRepositories>
	</pluginRepositories>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>${project.java.source.version}</source>
						<target>${project.java.target.version}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<!-- integration tests (*SysTest) are disabled by default; use SYSTESTS
			profile to enable it -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.17</version>
				<configuration>
					<excludes>
						<exclude>**/*SysTest.java</exclude>
						<exclude>**/*DoesntPassTest.java</exclude>
					</excludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.1</version>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<showDeprecation>true</showDeprecation>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<!-- Profile for compilation with Java 8. -->
		<profile>
			<id>java8</id>
			<activation>
				<jdk>1.8</jdk>
			</activation>
			<properties>
				<project.java.target.version>1.8</project.java.target.version>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<version>2.9.1</version>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
								<configuration>
									<!-- Do not fail compulation on Java doc errors (Java 8). -->
									<additionalparam>-Xdoclint:none</additionalparam>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<!-- profile to enable integration (system) tests -->
		<profile>
			<id>SYSTESTS</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.17</version>
						<configuration>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<include>**/*SysTest.java</include>
							</includes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>DOESNTPASS</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.17</version>
						<configuration>
							<excludes>
								<exclude>none</exclude>
							</excludes>
							<includes>
								<include>**/*DoesntPassTest.java</include>
							</includes>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<!-- define license -->
	<licenses>
		<license>
			<name>GNU General Public License, Version 3</name>
			<url>https://www.gnu.org/licenses/gpl-3.0.txt</url>
			<distribution>repo</distribution>
			<!-- https://maven.apache.org/pom.html#Licenses -->
		</license>
	</licenses>
</project>
